@model List<Contact>
@{
    ViewData["Title"] = "Home Page";
}
<div class=" = "mb-2">
    <a asp-controller="Contact" asp-action="Add">Add New Contact</a>
</div>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Phone Number</th>
            <th>Address</th>
            <th>Note</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var contact in Model) {
        <tr>
            <td>@contact.Name</td>
            <td>@contact.PhoneNum</td>
            <td>@contact.Address</td>
            <td>@contact.Note</td>
            <td>
                <a asp-controller="Contact" asp-action="Edit"
                    asp-route-id="@contact.ContactId">Edit</a>
                <a asp-controller="Contact" asp-action="Delete"
                    asp-route-id="@contact.ContactId">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>

